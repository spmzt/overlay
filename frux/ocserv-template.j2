auth = "plain[passwd=/usr/local/etc/ocserv/auth.passwd]"
listen-host = {{ jail_ipam[ansible_hostname]['epair1']['jail']}}
udp-listen-host = {{ jail_ipam[ansible_hostname]['epair1']['jail']}}
tcp-port = 1435
udp-port = 1435
run-as-user = _ocserv
run-as-group = _ocserv
socket-file = /var/run/ocserv-socket
server-cert = /usr/local/etc/ocserv/fullchain.pem
server-key = /usr/local/etc/ocserv/privkey.pem
dh-params = /usr/local/etc/ocserv/dh.pem
ca-cert = /usr/local/etc/ocserv/ca.pem
banner = "It's Pouria, Welcomed by {{ ansible_hostname }}. All Clients Have 2 Concurrent Limitation.
max-clients = 48
max-same-clients = 2
rate-limit-ms = 100
server-stats-reset-time = 604800
keepalive = 32400
dpd = 90
mobile-dpd = 1800
switch-to-tcp-timeout = 25
try-mtu-discovery = true
cert-user-oid = 0.9.2342.19200300.100.1.1
tls-priorities = "NORMAL:%SERVER_PRECEDENCE:%COMPAT:-VERS-SSL3.0:-VERS-TLS1.0:-VERS-TLS1.1"
auth-timeout = 240
min-reauth-time = 300
max-ban-score = 80
ban-reset-time = 1200
cookie-timeout = 300
deny-roaming = false
rekey-time = 172800
rekey-method = ssl
use-utmp = true
use-occtl = true
pid-file = /var/run/ocserv.pid
log-level = 1
device = vpns
predictable-ips = true
default-domain = example.spmzt.net
ipv4-network = {{ vpn_ipam[ansible_hostname]['ocserv']['jail']}}/{{ vpn_ipam[ansible_hostname]['ocserv']['prefix']}}
tunnel-all-dns = true
dns = 9.9.9.9
dns = 1.1.1.1
ping-leases = false
route = default
cisco-client-compat = true
dtls-legacy = true
client-bypass-protocol = false